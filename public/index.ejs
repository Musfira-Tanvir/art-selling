    <script>
        const carousel = document.querySelector('.product-images');
        const images = document.querySelectorAll('.product-item');
        const prev = document.querySelector('.prev');
        const next = document.querySelector('.next');
    
        let index = 0;
    
        function showSlide() {
            carousel.style.transform = `translateX(-${index * 100}%)`;
            carousel.style.transition = 'transform 0.5s ease-in-out';
        }
    
        next.addEventListener('click', () => {
            index = (index + 1) % images.length; // Loop back to first image
            showSlide();
        });
    
        prev.addEventListener('click', () => {
            index = (index - 1 + images.length) % images.length; // Loop to last image
            showSlide();
        });
    </script>
    
